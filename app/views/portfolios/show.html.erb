<div class="title">
  <strong><%= @portfolio.name.capitalize %></strong>
</div>

<% unless @portfolio.stocks.empty? %>
  <div>
    As of: ***[ADD ME]***
    <p>Inception Date: <%= @portfolio.inception %></p>
    <p>Total Return: <%= @portfolio.profit_pct.round(2) %>%</p>
    <%# if incepted_days > 365 %>
      <p class="hidden">Annualised Return: <%#= @portfolio.annualised %>%</p>
    <%# end %>
  </div>
<% end %>

<div>
  <strong>Portfolio Settings:</strong>
  <%= link_to "Edit", edit_portfolio_path(@portfolio) %>
  <%= link_to "Delete", portfolio_path(@portfolio), method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
</div>

<div>
  <% unless @portfolio.stocks.empty? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Ticker</th>
          <th>Quantity</th>
          <th>Cost</th>
          <th>Current Price</th>
          <th>Total Cost</th>
          <th>Market Value</th>
          <th>YTD (%)</th>
          <th>P&L ($)</th>
          <th>Return (%)</th>
        </tr>
      </thead>
      <tbody>
        <% @portfolio.duplicates.each do |x| %>
          <tr>
            <% x.each do |attr| %>
              <td><%= attr %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <br>
    <%= render "holdings" %>
  <% else %>
    <p>There are no stocks in <%= @portfolio.name.capitalize %>.</p>
  <% end %>
</div>

<div class="allocation">
  <%= render "allocation" %>
</div>

<div>
  <p><%= link_to "add new stock", new_stock_path %></p>
  <p><%= link_to "your portfolios", portfolios_path %></p>
</div>
