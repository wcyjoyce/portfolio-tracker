<div>
  <strong><%= @transaction.name(@transaction.ticker) unless @transaction.ticker.nil? %></strong>
</div>

<!-- Error messages -->
<% if @transaction.errors.any? %>
  <div class="errors">
    Sorry! Your transaction hasn't been added because of the following reasons, please try again:
    <ul>
    <% @transaction.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<!-- Form -->
<%= simple_form_for(@transaction) do |s| %>
  <%= s.input :ticker %>
  <div class="form-flex">
    <div class="form-half"><%= s.input :shares, label: "Quantity" %></div>
    <div class="form-half"><%= s.input :price %></div>
  </div>
  <div class="form-group date required transaction_added">
    <label class="form-control-label date required" for="transaction_added_1i">Transaction Date<abbr title="required">*</abbr></label>
    <div class="d-flex justify-content-between align-items-center">
      <div class="col-xs-4">
        <select id="transaction_added_3i" name="transaction[added(3i)]" class="form-control mx-1 date required">
          <option value="">DAY</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
          <option value="13">13</option>
          <option value="14">14</option>
          <option value="15">15</option>
          <option value="16">16</option>
          <option value="17">17</option>
          <option value="18">18</option>
          <option value="19">19</option>
          <option value="20">20</option>
          <option value="21">21</option>
          <option value="22">22</option>
          <option value="23">23</option>
          <option value="24">24</option>
          <option value="25">25</option>
          <option value="26">26</option>
          <option value="27">27</option>
          <option value="28">28</option>
          <option value="29">29</option>
          <option value="30">30</option>
          <option value="31">31</option>
        </select>
      </div>
      <div class="col-xs-4">
        <select id="transaction_added_2i" name="transaction[added(2i)]" class="form-control mx-1 date required">
          <option value="">MONTH</option>
          <option value="1">January</option>
          <option value="2">February</option>
          <option value="3">March</option>
          <option value="4">April</option>
          <option value="5">May</option>
          <option value="6">June</option>
          <option value="7">July</option>
          <option value="8">August</option>
          <option value="9">September</option>
          <option value="10">October</option>
          <option value="11">November</option>
          <option value="12">December</option>
        </select>
      </div>
      <div class="col-xs-4">
        <select id="transaction_added_1i" name="transaction[added(1i)]" class="form-control mx-1 date required">
          <option value="">YEAR</option>
          <option value="2014">2014</option>
          <option value="2015">2015</option>
          <option value="2016">2016</option>
          <option value="2017">2017</option>
          <option value="2018">2018</option>
          <option value="2019">2019</option>
          <option value="2020">2020</option>
          <option value="2021">2021</option>
          <option value="2022">2022</option>
          <option value="2023">2023</option>
          <option value="2024">2024</option>
        </select>
      </div>
    </div>
  </div>
  <%= s.association :portfolio, collection: Portfolio.order(:created_at), prompt: "PLEASE SELECT" %>
  <button type="button" class="button" data-toggle="modal" data-target="#confirmation">Submit</button>
  <%= link_to "Cancel", :back, class: "button" %>

  <!-- Modal -->
  <%= render "modal" %>
<% end %>
