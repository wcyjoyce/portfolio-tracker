<div>
  <strong><%= @transaction.name(@transaction.ticker) unless @transaction.ticker.nil? %></strong>
</div>

<% if @transaction.errors.any? %>
  <div class="errors">
    Sorry! Your transaction hasn't been added because of the following reasons, please try again:
    <ul>
    <% @transaction.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= simple_form_for(@transaction) do |s| %>
  <%= s.input :ticker %>
  <%= s.input :shares %>
  <%= s.input :price %>
  <%= s.input :added %>
  <%= s.association :portfolio, collection: Portfolio.order(:created_at), prompt: "Please select:" %>
  <%= s.submit "Submit", class: "btn" %>
  <a href="#" class="btn" onClick="history.go(-1);return true;">BACK</a>
<% end %>
