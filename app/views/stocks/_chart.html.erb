<h2>Performance</h2>
<div class="toggles">
  <a href="#" class="toggle" id="toggle-5y">5Y</a>
  <a href="#" class="toggle" id="toggle-1y">1Y</a>
  <a href="#" class="toggle" id="toggle-ytd">YTD</a>
  <a href="#" class="toggle" id="toggle-6m">6M</a>
  <a href="#" class="toggle" id="toggle-1m">1M</a>
  <a href="#" class="toggle" id="toggle-1d">1D</a>
</div>

<div class="performance-charts">
  <div class="performance-chart" id="chart-5y">
  <%= line_chart @chart_5y, library: @library_options, points: false, min: nil %>
  </div>
  <div class="performance-chart hidden" id="chart-1y">
  <%= line_chart @chart_1y, library: @library_options, points: false, min: nil %>
  </div>
  <div class="performance-chart hidden" id="chart-ytd">
  <%= line_chart @chart_ytd, library: @library_options, points: false, min: nil %>
  </div>
  <div class="performance-chart hidden" id="chart-6m">
  <%= line_chart @chart_6m, library: @library_options, points: false, min: nil %>
  </div>
  <div class="performance-chart hidden" id="chart-1m">
  <%= line_chart @chart_1m, library: @library_options, points: false, min: nil %>
  </div>
  <div class="performance-chart hidden" id="chart-1d">
    <%= line_chart @chart_1d, library: @library_options, points: false, min: nil %>
  </div>
</div>

<%= javascript_pack_tag "chart-toggle.js" %>
